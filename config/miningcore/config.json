{
  "$schema": "https://raw.githubusercontent.com/oliverw/miningcore/master/src/Miningcore/config.schema.json",
  "logging": {
    "level": "info",
    "enableConsoleLog": true,
    "enableConsoleColors": true,
    "logFile": "miningcore.log",
    "apiLogFile": "miningcore-api.log",
    "logBaseDirectory": "/app/logs"
  },
  "banning": {
    "manager": "integrated",
    "banOnJunkReceive": true,
    "banOnInvalidShares": true
  },
  "persistence": {
    "postgres": {
      "host": "postgres",
      "port": 5432,
      "user": "miningcore",
      "password": "change_me_in_env_file",
      "database": "miningcore"
    }
  },
  "paymentProcessing": {
    "enabled": true,
    "interval": 600,
    "shareRecoveryFile": "recovered-shares.txt"
  },
  "clusterName": "Community XMR Pool",
  "pools": [
    {
      "id": "xmr1",
      "enabled": true,
      "coin": "monero",
      "address": "YOUR_MONERO_WALLET_ADDRESS_HERE",
      "rewardRecipients": [
        {
          "address": "YOUR_MONERO_WALLET_ADDRESS_HERE",
          "percentage": 1.0
        }
      ],
      "blockRefreshInterval": 100,
      "clientConnectionTimeout": 600,
      "banning": {
        "enabled": true,
        "time": 600,
        "invalidPercent": 50,
        "checkThreshold": 50
      },
      "ports": {
        "3333": {
          "listenAddress": "0.0.0.0",
          "name": "Low Diff (CPU)",
          "difficulty": 2000,
          "varDiff": {
            "minDiff": 500,
            "maxDiff": 50000,
            "targetTime": 15,
            "retargetTime": 90,
            "variancePercent": 30
          }
        }
      },
      "daemons": [
        {
          "host": "monero-node",
          "port": 18081,
          "user": "",
          "password": "",
          "zmqBlockNotifySocket": "tcp://monero-node:18082"
        }
      ],
      "paymentProcessing": {
        "enabled": true,
        "minimumPayment": 0.01,
        "payoutScheme": "PPLNS",
        "payoutSchemeConfig": {
          "factor": 2.0
        }
      }
    }
  ]
}